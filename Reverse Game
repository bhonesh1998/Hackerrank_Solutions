#include<bits/stdc++.h>
#define pf printf
#define sf scanf
#define db double 
#define z long long int 
using namespace std;


int main() {
    int t,n,k;
    scanf("%d",&t);
    while(t--){
        scanf("%d %d",&n,&k);
        if(k<n/2){
            printf("%d\n",2*k+1);
        }
        else{
            printf("%d\n",(n-1-k)*2);
        }
    }

}
