#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#define pf printf
#define sf scanf



int main()
{
	
int n,i,min=0,max=0;
sf("%d",&n);

int a[n];
for(i=0;i<n;i++)
{sf("%d",&a[i]);
if(a[i]==1)max++;}



for(i=0;i<n;i++)
{

	//pf("check %d\n",i);
	if(a[i]==1)
	{

		if(a[i+1]==1)
		{min++;
		i++;}

	else
		min++;	
	}
	



}

pf("%d %d",min,max);

return 0;

}




