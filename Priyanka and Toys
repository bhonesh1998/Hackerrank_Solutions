#include<bits/stdc++.h>
#define pf printf
#define sf scanf
#define db double 
#define z long long int 
using namespace std ;

int main() {

    int n,i;
    sf("%d",&n);int a[n];
    for(i=0;i<n;i++)
    sf("%d",&a[i]);
    sort(a,a+n);
    int m = a[0];
    i=0;
    int c=0;
    int k=n;
            while(i<k)
            {
            while(a[i]<=(m+4))
                i++;
            c++;
            m=a[i];
            }
        
        cout << c ;

}
