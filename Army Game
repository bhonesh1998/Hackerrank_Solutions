#include<bits/stdc++.h>
#define pf printf
#define sf scanf
#define z long long int
using namespace std ;
int main()
{
	
	z a,b;
	sf("%lld %lld",&b,&a);
	pf("%lld",( ((b+1)/2) *((a+1)/2) )  );

	return 0;
} 

