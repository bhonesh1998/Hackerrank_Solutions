#include<bits/stdc++.h>
#define pf printf
#define sf scanf
#define db double 
#define z long long int 
using namespace std;
int main()
{
        int i,n,s=0,s1=0;
        sf("%d",&n);
        int a[n],b[n];
        for(i=0;i<n;i++) sf("%d",&a[i]);
            for(i=0;i<n;i++) {sf("%d",&b[i]); s+=b[i];}
             for(i=0;i<n;i++) 
             {
                    s1+= (a[i]*b[i]);
             } 

             pf("%.1lf",(db)s1/(db)s);







}
